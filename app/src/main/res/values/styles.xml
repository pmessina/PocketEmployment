<resources>

    <style name="CustomFont">
        <item name="fontPath">ArimaMadurai-Medium.ttf</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PocketEmploymentTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorBackground">@color/background_material_light_2</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

</resources>
